<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_beverage"
        android:id="@+id/dietIcon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="18dp"
        android:id="@+id/dietTitle"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/dietIcon"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dietName"
        android:text="Dietician Name"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/dietIcon"
        android:layout_below="@id/dietTitle"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dietInfo"
        android:text="Product Information"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/dietIcon"
        android:layout_below="@id/dietName"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹ 500.00"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:id="@+id/dietPrice"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_add_shopping_cart_24"
        android:background="@color/purple_500"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/dietPrice"/>


</RelativeLayout>